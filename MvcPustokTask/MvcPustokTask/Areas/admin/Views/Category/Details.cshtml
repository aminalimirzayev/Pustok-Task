@model Category
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Category Details</h1>

    <div class="card shadow mb-4" style="max-width: 600px;">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Name</h6>
        </div>
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/admin/img/@Model.ImageUrl" class="img-fluid mb-3" style="max-height: 300px; border-radius: 15px;" />
            }
            else
            {
                <div class="alert alert-secondary">No image available for this category.</div>
            }

            <hr />
            <h5><strong>Name:</strong> @Model.Name</h5>
            <p><strong>Database ID:</strong> @Model.Id</p>

            <div class="mt-4">
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning text-white">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>