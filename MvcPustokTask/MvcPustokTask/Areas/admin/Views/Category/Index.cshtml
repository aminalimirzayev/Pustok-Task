@using MvcPustokTask.Models
@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Categories</h1>
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Create New Category
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories Table</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width: 200px; text-align: center;">Actions</th>
                            <th>Name</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-1">
                                          
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm text-white" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                           
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-circle btn-sm text-white" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm" onclick="return confirm('Silmək istədiyinizə əminsiniz?')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="~/admin/img/@item.ImageUrl" width="60" height="60" style="object-fit:cover; border-radius: 5px;" />
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">No image</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-danger">Siyahı boşdur.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>