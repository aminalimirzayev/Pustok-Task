@model Product

<div class="container-fluid">
    <h1 class="h3 mb-4">Create Product</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Author">Author</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ExPrice">Old Price (ExPrice)</label>
                <input asp-for="ExPrice" type="number" step="0.01" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Product Image</label>
            <input name="ImageFile" type="file" class="form-control-file" accept="image/*" />
        </div>

        <div class="form-row mb-3">
            <div class="form-check ml-3">
                <input asp-for="IsFeatured" class="form-check-input">
                <label class="form-check-label mr-4">Featured</label>
            </div>
            <div class="form-check ml-3">
                <input asp-for="IsNew" class="form-check-input">
                <label class="form-check-label">New Product</label>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>