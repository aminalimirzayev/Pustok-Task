@model Product

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Məhsulun Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Müəllif</label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Qiymət</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Köhnə Qiymət (ExPrice)</label>
        <input asp-for="ExPrice" type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Kateqoriya</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
        </select>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsFeatured" class="form-check-input" type="checkbox">
        <label class="form-check-label">Is Featured?</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsNew" class="form-check-input" type="checkbox">
        <label class="form-check-label">Is New?</label>
    </div>

    <button type="submit" class="btn btn-primary">Yenilə</button>
</form>